{
	"name": "squeaker",
	"version": "0.0.1-alpha.1",
	"description": "A tiny (but advanced) simplex noise module",
	"type": "module",
	"source": "./src/squeaker.ts",
	"exports": "./dist/squeaker.modern.js",
	"main": "./dist/squeaker.cjs",
	"module": "./dist/squeaker.js",
	"unpkg": "./dist/squeaker.umd.js",
	"typings": "./dist/squeaker.d.ts",
	"sideEffects": false,
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"serve": "snowpack dev",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --fix --ext .ts",
		"build": "pnpm test && microbundle",
		"build:web": "vite build",
		"build-noTest": "microbundle",
		"build:worker": "pnpm microbundle -i .\\demo\\noiseWorker.ts  -o .\\demoBuild\\noiseWorker.js -f esm --sourcemap false",
		"test": "ava test/**/*.spec.ts test/**/*.test.ts",
		"coverage": "c8 ava test/**/*.spec.ts test/**/*.test.ts --reporter=text",
		"report": "c8 report --reporter=lcov --reporter=text",
		"doc": "lehre --template-path ./template",
		"benchmark": "pnpm node --loader=ts-node/esm --experimental-specifier-resolution=node --trace-warnings ./benchmarkDirectory/benchmark.ts"
	},
	"author": "Brian Crotty",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/illumincrotty/squeaker.git"
	},
	"bugs": {
		"url": "https://github.com/illumincrotty/squeaker/issues"
	},
	"homepage": "https://github.com/illumincrotty/squeaker#readme",
	"keywords": [
		"types",
		"noise",
		"perlin",
		"perlin noise",
		"alea",
		"random",
		"simplex"
	],
	"devDependencies": {
		"@snowpack/plugin-typescript": "^1.2.1",
		"@types/node": "^16.7.10",
		"@types/pngjs": "^6.0.1",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"asm-noise": "^1.0.2",
		"autoprefixer": "^10.3.3",
		"ava": "^3.15.0",
		"benny": "^3.6.15",
		"c8": "^7.8.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-ava": "^12.0.0",
		"eslint-plugin-jsdoc": "^36.0.8",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-unicorn": "^35.0.0",
		"lehre": "^1.5.0",
		"microbundle": "^0.13.3",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.19",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2",
		"vite": "^2.5.3"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm",
			"--experimental-specifier-resolution=node",
			"--no-warnings=ExperimentalWarning"
		]
	}
}
